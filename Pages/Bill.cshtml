@page
@model DoAnQuanLyCuaHang.Pages.BillModel
@{
}
<div class="container-fluid">
    <div class="row">
        <div style="margin: 10px 10px;">
            <form method="post">
                <div class="form-inline">
                    <div>
                        <select name="typeSearch" id="typeSearch">
                            <option value="numberBill">Mã hóa đơn</option>
                            <option value="createDate">Ngày tạo</option>
                        </select>
                    </div>
                    <div style="margin-left: 10px !important;">
                        <input type="text" class="" placeholder="Search" id="key" name="key">
                    </div>
                    <div style="margin-left: 10px !important;">
                        <button type="submit" class="btn-light">Tìm kiếm</button>
                    </div>
                    <a href="/Bill" class="btn btn-primary float-right" style="margin-left:10px;">Tải lại trang</a>
                </div>
            </form>

        </div>

        <div style="height:800px; overflow-y: scroll ;">
            <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th class="th-sm">Mã hóa đơn</th>
                        <th class="th-sm">Mã Sản Phẩm</th>
                        <th class="th-sm">Tên Sản Phẩm</th>
                        <th class="th-sm">Số lượng</th>
                        <th class="th-sm">Loại hàng</th>
                        <th class="th-sm">Ngày tạo hóa đơn</th>
                        <th class="th-sm"></th>
                        <th class="th-sm"></th>
                    </tr>
                </thead>
                @{ if (Model.bills != null)
                    {
                        for (int i = 0; i < Model.bills.Count; i++)
                        {
                            <tr>
                                <td>@Model.bills[i].numberBill</td>
                                <td>@Model.bills[i].productNumber</td>
                                <td>@Model.bills[i].productName</td>
                                <td>@Model.bills[i].number</td>
                                <td>@Model.bills[i].productType</td>
                                <td>@Model.bills[i].createDate</td>
                                <td>
                                    <a href="/Bill?id=@Model.bills[i].numberBill">Xóa</a>
                                </td>
                                <td>
                                    <a href="/BillUpdate?idUpdate=@Model.bills[i].numberBill">Sửa</a>
                                </td>
                            </tr>
                        }
                    }

                }
            </table>
            <a href="/BillAdd" class="btn btn-primary float-right">Thêm sản phẩm</a>
        </div>
    </div>


</div>
