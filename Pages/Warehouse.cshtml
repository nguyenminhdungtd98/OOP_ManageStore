@page
@model DoAnQuanLyCuaHang.Pages.WarehouseModel
@{
}

<div class="container-fluid">
    <div class="row">


        <div style="height:800px; overflow-y: scroll ; width:100%" class="col col-md-8">

            @{
                for (int i = 0; i < Model.productTypes.Count; i++)
                {
                    <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                        <thead class="thead-dark">
                            <tr>
                                <th class="th-sm">Loại hàng @Model.productTypes[i].productTypeName</th>
                            </tr>
                            <tr>
                                <th class="th-sm">Mã Sản Phẩm</th>
                                <th class="th-sm">Tên Sản Phẩm</th>
                                <th class="th-sm">Ngày hết hạn</th>
                                <th class="th-sm">Số lượng</th>
                                <th class="th-sm">Loại hàng</th>
                            </tr>
                        </thead>

                        @{
                            for (int j = 0; j < Model.itemsInWarehouse.Count; j++)
                            {
                                if (Model.itemsInWarehouse[j].productType.Equals(Model.productTypes[i].productTypeName))
                                {
                                    <tr>
                                        <td>@Model.itemsInWarehouse[j].productNumber</td>
                                        <td>@Model.itemsInWarehouse[j].productName</td>
                                        <td>@Model.itemsInWarehouse[j].expireDate</td>
                                        <td>@Model.itemsInWarehouse[j].number</td>
                                        <td>@Model.itemsInWarehouse[j].productType</td>

                                    </tr>
                                }
                            }
                        }


                    </table>
                }



            }




            <a href="/AddProduct" class="btn btn-primary float-right">Thêm sản phẩm</a>
        </div>
        <div class="col col md-4">
            <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th class="th-sm">
                            Tên sản phẩm
                        </th>
                        <th class="th-sm">Ngày hết hạn</th>
                    </tr>
                </thead>
                @{
                    if (Model.itemsExpire != null && Model.itemsExpire.Count > 0)
                    {
                        for (int i = 0; i < Model.itemsExpire.Count; i++)
                        {
                            <tr>
                                <td>@Model.itemsExpire[i].productName</td>
                                <td style="color:red">@Model.itemsExpire[i].expireDate</td>
                            </tr>
                        }
                    }
                }
            </table>

        </div>
    </div>


</div>
