@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container-fluid">
    <div class="row">
        <div style="margin: 10px 10px;">
            <form method="post">
                <div class="form-inline">
                    <div>
                        <select name="typeSearch" id="typeSearch">
                            <option value="productNumber">Mã sản phẩm</option>
                            <option value="productName">Tên sản phẩm</option>
                            <option value="expireDate">Ngày hết hạn</option>
                            <option value="company">Công ty</option>
                            <option value="dateOfManufacture">Ngày sản xuẩt</option>
                            <option value="productType">Loại sản phẩm</option>
                            <option value="price">Giá</option>
                        </select>
                    </div>
                    <div style="margin-left: 10px !important;">
                        <input type="text" class="" placeholder="Search" id="key" name="key">
                    </div>
                    <div style="margin-left: 10px !important;">
                        <button type="submit" class="btn-light">Tìm kiếm</button>
                    </div>
                    <a href="/index" class="btn btn-primary float-right" style="margin-left:10px;">Tải lại trang</a>
                </div>
            </form>

        </div>

        <div style="height:800px; overflow-y: scroll ;">
            <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead class="thead-dark">
                    <tr>
                        <th class="th-sm">Mã Sản Phẩm</th>
                        <th class="th-sm">Tên Sản Phẩm</th>
                        <th class="th-sm">Ngày hết hạn</th>
                        <th class="th-sm">Công ty sản xuất</th>
                        <th class="th-sm">Ngày sản xuất</th>
                        <th class="th-sm">Loại hàng</th>
                        <th class="th-sm">Giá</th>
                        <th class="th-sm"></th>
                        <th class="th-sm"></th>
                    </tr>
                </thead>
                @{ if (Model.products != null)
                    {
                        for (int i = 0; i < Model.products.Count; i++)
                        {
                            <tr>
                                <td>@Model.products[i].productNumber</td>
                                <td>@Model.products[i].productName</td>
                                <td>@Model.products[i].expireDate</td>
                                <td>@Model.products[i].company</td>
                                <td>@Model.products[i].dateOfManufacture</td>
                                <td>@Model.products[i].productType</td>
                                <td>@Model.products[i].price</td>
                                <td>
                                    <a href="/index?id=@Model.products[i].productNumber">Xóa</a>
                                </td>
                                <td>
                                    <a href="/Update?id=@Model.products[i].productNumber">Sửa</a>
                                </td>
                            </tr>
                        }
                    }

                }
            </table>
            <a href="/AddProduct" class="btn btn-primary float-right">Thêm sản phẩm</a>
        </div>
    </div>


</div>
