@page
@model DoAnQuanLyCuaHang.Pages.BillOutManageModel
@{
}

<div class="container-fluid">
    <div class="row">
        <div style="margin: 10px 10px;">
            <form method="post">
                <div class="form-inline">
                    <div>
                        <select name="typeSearch" id="typeSearch">
                            <option value="numberBill">Mã hóa đơn</option>
                            <option value="createDate">Ngày tạo</option>
                        </select>
                    </div>
                    <div style="margin-left: 10px !important;">
                        <input type="text" class="" placeholder="Search" id="key" name="key">
                    </div>
                    <div style="margin-left: 10px !important;">
                        <button type="submit" class="btn-light">Tìm kiếm</button>
                    </div>
                    <a href="/BillOutManage" class="btn btn-primary float-right" style="margin-left:10px;">Tải lại trang</a>
                </div>
            </form>

        </div>


    </div>
    <div class="row" style="justify-content:center">
        <div style="height:800px; overflow-y: scroll;">
            <a href="/BillOut" class="btn btn-primary float-right">Thêm hóa đơn bán hàng</a>
            @{
                if (Model.billOuts != null)
                {
                    @for (int j = 0; j < Model.billOuts.Count; j++)
                    {


                        <div class="py-4">
                            <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" width="100%">

                                <thead class="thead-dark">
                                    <tr>
                                        <th class="th-sm">Mã hóa đơn</th>
                                        <th class="th-sm">Ngày tạo hóa đơn</th>
                                        <th class="th-sm"></th>
                                        <th class="th-sm"></th>
                                    </tr>
                                </thead>

                                <tr>
                                    <td>@Model.billOuts[j].numberBillOut</td>
                                    <td>@Model.billOuts[j].createDate</td>
                                    <td>
                                        <a href="/BillOutManage?id=@Model.billOuts[j].numberBillOut">Xóa</a>
                                    </td>
                                    <td>
                                        <a href="/BillOutUpdate?idUpdate=@Model.billOuts[j].numberBillOut">Sửa</a>
                                    </td>
                                </tr>

                            </table>
                            <table id="dtVerticalScrollExample" class="table table-striped table-bordered table-sm" width="100%">
                                <thead class="">
                                    <tr>

                                        <th class="th-sm">Mã Sản Phẩm</th>
                                        <th class="th-sm">Tên Sản Phẩm</th>
                                        <th class="th-sm">Số lượng</th>
                                        <th class="th-sm">Đơn giá</th>
                                        <th class="th-sm">Tổng cộng</th>
                                    </tr>
                                </thead>
                                @{ if (Model.billOuts != null)
                                    {
                                        for (int i = 0; i < Model.billOuts[j].productInBill.Count; i++)
                                        {
                                            <tr>
                                                <td>@Model.billOuts[j].productInBill[i].productNumber</td>
                                                <td>@Model.billOuts[j].productInBill[i].productName</td>
                                                <td>@Model.billOuts[j].productInBill[i].number</td>
                                                <td>@Model.billOuts[j].productInBill[i].price</td>
                                                <td>@Model.billOuts[j].productInBill[i].total</td>
                                            </tr>
                                        }
                                    }

                                }

                            </table>
                        </div>

                    }

                }

            }


        </div>
    </div>

</div>